<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Employe">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="100dp"
                    android:textStyle="bold"     android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:text="ID"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/text_ID"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:textStyle="bold"             android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:text="Nom"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                     />

                <EditText
                    android:id="@+id/text_nomm"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_Prenom"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"               android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:text="Prenom"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                     />

                <EditText
                    android:id="@+id/text_prenomm"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:text="Telephone"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                     />

                <EditText
                    android:id="@+id/text_tellView"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:text="Mission"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/text_missionnView"
                    android:layout_width="match_parent"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:shadowColor="#FFFFFF"
                    android:text="Date_Depart"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/text_deppView"
                    android:layout_width="match_parent"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:foregroundGravity="center_horizontal"
                    android:foregroundTint="#0288D1"
                    android:gravity="center"
                    android:text="Date_Arrive"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/text_arrrView"
                    android:layout_width="match_parent"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:text="BACK" />

                <Button
                    android:id="@+id/buttonEnrt"
                    android:layout_width="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enregistrer" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>